@model OnlineFood.Models.Role

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center my-4">Create New Role</h1>

<div class="card shadow-lg p-4">
    <h4 class="card-title mb-4">Role Details</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="TenRole" class="form-label">Tên vai trò</label>
                    <input asp-for="TenRole" class="form-control rounded" placeholder="Nhập tên vai trò" />
                    <span asp-validation-for="TenRole" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="TrangThai" class="form-label">Trạng thái</label>
                    <select asp-for="TrangThai" class="form-select rounded">
                        <option value="">Chọn trạng thái</option>
                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="TrangThai" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Mota" class="form-label">Mô tả vai trò</label>
                    <textarea asp-for="Mota" class="form-control rounded" placeholder="Nhập mô tả vai trò" rows="3"></textarea>
                    <span asp-validation-for="Mota" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary px-4">Create</button>
                    <a href="@Url.Action("Index", "Settings")" class="btn btn-outline-secondary px-4">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
