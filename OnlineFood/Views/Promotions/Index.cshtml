      <footer class="promotion-footer">
        <div class="selected-count">0 of 13 raw(s) selected</div>
        <nav class="pagination" aria-label="Pagination">
          <div class="pagination-arrows">
            <img src="https://cdn.builder.io/api/v1/image/assets/fd43dbd6411c4856a145ca3e16eab82b/5ee9be6e5db5801a2482b3c98bb293c259aa6d0b33cc463f68f86993c801ed7a?apiKey=fd43dbd6411c4856a145ca3e16eab82b&" alt="First page" class="arrow-left-double" />
            <img src="https://cdn.builder.io/api/v1/image/assets/fd43dbd6411c4856a145ca3e16eab82b/5ab012c4f88b07e8f612307998d88d7f5f231aef4b942953b6c74e2962f46df4?apiKey=fd43dbd6411c4856a145ca3e16eab82b&" alt="Previous page" class="arrow-left" />
