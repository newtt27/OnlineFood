@model IEnumerable<OnlineFood.Models.Promotion>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Index";
}

<section class="promotion-container">
 
  
  <header class="promotion-header">
      <link rel="stylesheet" href="/css/Promotions.css" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <h1 class="promotion-title">PROMOTION MANAGEMENT</h1>
        <!---<img src="https://cdn.builder.io/api/v1/image/assets/fd43dbd6411c4856a145ca3e16eab82b/af0e95019fbcd765549092b28f0fbf6a9193ed4dc45a1fa25a75cd00d41c5def?apiKey=fd43dbd6411c4856a145ca3e16eab82b&" alt="Promotion graph" class="promotion-graph" />-->
        <div class="button-container">
            <button class="btn import"><i class="fas fa-download"></i> Import</button>
            <button class="btn export"><i class="fas fa-upload"></i> Export</button>
            <button class="btn add" onclick="window.location.href='/Promotions/Create'"><i class="fas fa-plus"></i> Add</button>
            <button class="btn edit"><i class="fas fa-edit"></i> Edit</button>
            <button class="btn delete"><i class="fas fa-trash-alt"></i> Delete</button>
        </div>
  </header>
  
  <main class="promotion-content">
    <div class="promotion-inner">
      <div class="promotion-main">
        <div class="promotion-layout">
          <div class="promotion-left">
            <div class="promotion-left-content">
              <div class="promotion-filters">
                <div class="promotion-title-count">
                  <h2 class="promotion-title-text">PROMOTIONS</h2>
                  <span class="promotion-count">(100)</span>
                </div>
                <div class="promotion-filter-options">
                  <div class="filter-all">
                    <div class="filter-all-inner">
                      <div>All</div>
                      <img src="https://cdn.builder.io/api/v1/image/assets/fd43dbd6411c4856a145ca3e16eab82b/1b543a329805a33313758c0f0b3d78bad5839bbddef5b88e4e51a2b648a6268b?apiKey=fd43dbd6411c4856a145ca3e16eab82b&" alt="Dropdown icon" class="dropdown-icon-small" />
                    </div>
                  </div>
                  <div class="filter-calendar">
                    <div class="filter-calendar-inner">
                      <div class="calendar-icon-text">
                        <img src="https://cdn.builder.io/api/v1/image/assets/fd43dbd6411c4856a145ca3e16eab82b/ec8d0d8a78035897d72b97b5c3c0b2040dac2441c5388d0d454600c9b2daf362?apiKey=fd43dbd6411c4856a145ca3e16eab82b&" alt="Calendar icon" class="calendar-icon" />
                        <div class="calendar-text">Today</div>
                      </div>
                      <img src="https://cdn.builder.io/api/v1/image/assets/fd43dbd6411c4856a145ca3e16eab82b/1b543a329805a33313758c0f0b3d78bad5839bbddef5b88e4e51a2b648a6268b?apiKey=fd43dbd6411c4856a145ca3e16eab82b&" alt="Dropdown icon" class="dropdown-icon-calendar" />
                    </div>
                  </div>
                </div>
              </div>
                            <!----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------->
              <div class="promotion-table-header">
                <div class="promotion-checkbox-header">
                  <div class="checkbox"></div>
                  <div class="promotion-info-header">Promotion Info</div>                  
                </div>
                <div class="promotion-details-header">
                  <div>@Html.DisplayNameFor(model => model.Code)</div>
                  <div>@Html.DisplayNameFor(model => model.PhanTram)</div>
                  <div class="order-limit-header"></div>
                  <div class="available-date-header">
                         <!--<span class="NgayBD">@Html.DisplayNameFor(model => model.NgayBd)</span>
                             <span class="NgayBD">@Html.DisplayNameFor(model => model.NgayKt)</span>-->
                    <span>Available Date</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="promotion-right">
            <div class="promotion-right-content">
              <div class="columns-dropdown">
                <div>Columns</div>
                <img src="https://cdn.builder.io/api/v1/image/assets/fd43dbd6411c4856a145ca3e16eab82b/1b543a329805a33313758c0f0b3d78bad5839bbddef5b88e4e51a2b648a6268b?apiKey=fd43dbd6411c4856a145ca3e16eab82b&" alt="Dropdown icon" class="dropdown-icon-columns" />
              </div>
              <div class="status-detail-header">
                                <!--<div>@Html.DisplayNameFor(model => model.TrangThai)</div>-->
                  <div>TrangThai</div>
                  <div>Detail</div>
              </div>
            </div>
          </div>
        </div>

                <!----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------->
        <hr class="promotion-divider" />
        <div class="promotion-item">

            @foreach(var item in Model){
          <div class="promotion-item-left">
            <div class="item-checkbox"></div>
            <img src="https://cdn.builder.io/api/v1/image/assets/fd43dbd6411c4856a145ca3e16eab82b/eb35bb0343e331930ebdce904f425b7b10ab91c327bb6e475a2c06bbdbf8eb24?apiKey=fd43dbd6411c4856a145ca3e16eab82b&" alt="Item image" class="item-image" />
            <div class="item-info">                    <!---->
              <div class="item-code">@Html.DisplayFor(modelItem => item.Id)</div>
              <div class="item-name">@Html.DisplayFor(modelItem => item.Ten)</div>
            </div>
            <div>@Html.DisplayFor(modelItem => item.Code)</div>
            <div>@Html.DisplayFor(modelItem => item.PhanTram)</div>
            <div class="order-limit-header"></div>
            <div class="available-date-header">
                <span class="NgayBD">@Html.DisplayFor(modelItem => item.NgayBd)</span>
                <span class="NgayBD">@Html.DisplayFor(modelItem => item.NgayKt)</span>
            </div>
          </div>
           
          <div class="item-status-detail">
            <div class="item-status">
              <div class="status-indicator"></div>
              <div>Active</div>
            </div>
            <button class="item-detail" onclick="location.href='@Url.Action("Details", new { id = item.Id })'">
              <img src="https://cdn.builder.io/api/v1/image/assets/fd43dbd6411c4856a145ca3e16eab82b/0f380020b2551aece22984d261fa3c181f421dca5da8af54a2283f3ed7fbaea2?apiKey=fd43dbd6411c4856a145ca3e16eab82b&" alt="Detail icon" class="detail-icon" />
              <div>View</div>
            </button>
          </div>
            }
        </div>
            
