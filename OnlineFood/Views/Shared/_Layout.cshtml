<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineFood</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/notification.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineFood.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-default navbar-color" style="height: 100px">
            <div class="container-fluid">
                <div class="navbar-header mx-4">
                    <div class="m-3">
                        <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                            <span class="iCielCadena-900 logo-size logo-F">F</span>
                            <span class="iCielCadena-900 logo-size logo-O-1">O</span>
                            <span class="iCielCadena-900 logo-size logo-O-2">O</span>
                            <span class="iCielCadena-900 logo-size logo-DIY">D</span>
                            <span class="iCielCadena-900 logo-size logo-DIY">I</span>
                            <span class="iCielCadena-900 logo-size logo-DIY">Y</span>
                        </a>
                    </div>
                </div>
                <ul class="nav nav-link-flex navbar-font">
                    <li class="active mx-3"><a asp-controller="Home" asp-action="Index" class="text-decoration-none navbar-text-color navbar-text-size"> Home </a></li>
                    <li class="mx-3"><a class="text-decoration-none navbar-text-color navbar-text-size" href="#fast-food-menu">Menu</a></li>
                    @* <li class="mx-3"><a  class="text-decoration-none navbar-text-color navbar-text-size" href="#">Services</a></li> *@
                    <li class="mx-3"><a class="text-decoration-none navbar-text-color navbar-text-size" href="#about-us">About us</a></li>
                    <li class="mx-3"><a class="text-decoration-none navbar-text-color navbar-text-size" href="#contact">Contact</a></li>
                </ul>

                <div class="input-group mr-2">
                    <input type="search" class="form-control" id="searchInput" placeholder="Search..." aria-label="Search">
                    <!-- <button class="btn" type="submit"><i class="fas fa-search"></i></button> -->
                </div>

                <div>
                    <ul class="nav nav-link-flex navbar-text-size">
                        <li class="mx-3 position-relative">
                            <button class="btn-custom" data-bs-toggle="modal" data-bs-target="#cartModal">
                                <i class="bi bi-cart fs-5"></i>
                            </button>
                            <span id="cart-count" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                0
                            </span>
                        </li>

                        <!-- Thêm partial view của modal -->
                        @await Html.PartialAsync("_CartModal")

                        <!-- Kiểm tra xem người dùng đã đăng nhập chưa -->
                        @if (Context.Session.GetInt32("UserId") != null)
                        {
                            <!-- Hiển thị nút Đăng xuất nếu đã đăng nhập -->
                            <li class="mx-3">
                                <a class="text-decoration-none" href="/Accounts/Logout">
                                    <button class="btn-custom">
                                        <i class="bi bi-box-arrow-right fs-5"></i> Đăng xuất
                                    </button>
                                </a>
                            </li>
                        }
                        else
                        {
                            <!-- Hiển thị biểu tượng người dùng nếu chưa đăng nhập -->
                                    <li class="mx-3">
                                        <a href="/Accounts/Login" class="text-decoration-none">
                                            <button class="btn-custom">
                                                <i class="bi bi-person fs-5"></i> Đăng nhập
                                            </button>
                                        </a>
                                    </li>
                        }
                        @* <li class="mx-3"><button class="btn-custom"><i class="bi bi-heart fs-5"></i></button></li> *@
                        @* <li class="mx-3"><button class="btn-custom"><i class="bi bi-list fs-5"></i></button></li> *@
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @await Html.PartialAsync("_NotificationModal")

    

    <body>
        <div class="container">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </body>
    


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/home.js"></script>
    <script src="~/js/cart.js"></script>
    <script src="~/js/notification.js"></script>
    <script src="~/js/search.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>