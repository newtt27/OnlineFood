@{
    Layout = null; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineFood</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineFood.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-default navbar-color" style="height: 100px">
            <div class="container-fluid">
                <div class="navbar-header mx-4">
                    <div class="m-3 ">
                        <span class="iCielCadena-900 logo-size logo-F">F</span>
                        <span class="iCielCadena-900 logo-size logo-O-1">O</span>
                        <span class="iCielCadena-900 logo-size logo-O-2">O</span>
                        <span class="iCielCadena-900 logo-size logo-DIY">D</span>
                        <span class="iCielCadena-900 logo-size logo-DIY">I</span>
                        <span class="iCielCadena-900 logo-size logo-DIY">Y</span>
                    </div>
                </div>
                <ul class="nav nav-link-flex navbar-font">
                    <li class="active mx-3"><a class="text-decoration-none navbar-text-color navbar-text-size" href="#">Home</a></li>
                    <li class="mx-3"><a class="text-decoration-none navbar-text-color navbar-text-size " href="#">Menu</a></li>
                    <li class="mx-3"><a class="text-decoration-none navbar-text-color navbar-text-size" href="#">Services</a></li>
                    <li class="mx-3"><a class="text-decoration-none navbar-text-color navbar-text-size" href="#">About us</a></li>
                    <li class="mx-3"><a class="text-decoration-none navbar-text-color navbar-text-size" href="#">Contact</a></li>
                </ul>

                <div class="input-group mr-2">
                    <input type="search" class="form-control" placeholder="Search..." aria-label="Search">
                    <!--   <button class="btn" type="submit"><i class="fas fa-search"></i></button> -->
                </div>

                <div>
                    <ul class="nav nav-link-flex navbar-text-size">
                        <li class="mx-3"><button class="btn-custom"><i class="bi bi-cart fs-5"></i></button></li>
                        <li class="mx-3"><button class="btn-custom"><i class="bi bi-person fs-5"></i></button></li>
                        <li class="mx-3"><button class="btn-custom"><i class="bi bi-heart fs-5"></i></button></li>
                        <li class="mx-3"><button class="btn-custom"><i class="bi bi-list fs-5"></i></button></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <body>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </body>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
