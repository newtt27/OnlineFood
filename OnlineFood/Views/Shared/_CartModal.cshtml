<!-- _CartModal.cshtml -->
<div class="modal fade" id="cartModal" tabindex="-1" aria-labelledby="cartModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="font-family: 'Marko One', sans-serif; max-width: 400px;">
        <div class="modal-content text-white" style="background-color: #181818;">
            <div class="modal-header d-flex align-items-center">
                <img src="~/assets/image/avatar.png" alt="User Avatar" style="width: 50px; height: 50px; border-radius: 50%;">
                <div class="ms-3">
                    <span style="font-size: 1.3rem;">abc</span><br>
                    <span style="font-size: 1rem;">ab@64;gmail.com</span>
                </div>
                <button type="button" class="btn-close ms-auto" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h5 class="text-uppercase mb-3">Your Cart</h5>

                <!-- Products List -->
                <h6 class="text-uppercase mb-2 text-start">Products List</h6>
                <ul class="list-group mb-4 cart-items">
                    <!-- Các sản phẩm sẽ được thêm động vào đây từ JavaScript -->
                </ul>

                <!-- Tổng giá -->
                <hr class="text-secondary">
                <div class="d-flex justify-content-between">
                    <span>Subtotal</span>
                    <span id="cart-subtotal">0 VND</span>
                </div>
                <div class="d-flex justify-content-between">
                    <span>Discount</span>
                    <span id="cart-discount">-0 VND</span>
                </div>
                <hr class="text-secondary">
                <div class="d-flex justify-content-between">
                    <h5>Total</h5>
                    <h5 id="cart-total">0 VND</h5>
                </div>
            </div>
            <div class="modal-footer d-flex justify-content-between my-1 py-3">
                <a asp-controller="Payments" asp-action="Index">
                    <button type="button" class="btn btn-warning text-white btn-custom_fastfood p-2" style="width: 100%;">THANH TOÁN</button>
                </a>
                <button type="button" class="btn btn-outline-warning text-white cart-close close-modal" data-bs-dismiss="modal" style="width: 48%;">CLOSE</button>
            </div>
        </div>
    </div>
</div>