@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <!-- Render Styles Section -->
    @RenderSection("Styles", false)

    <style>
        .wrapper {
            display: grid;
            grid-template-columns: 250px 1fr;
            grid-template-rows: auto 1fr;
            height: 100vh;
        }

        .topbar {
            grid-column: 1 / span 2;
            background-color: #f8f9fa;
            padding: 1rem;
            border-bottom: 1px solid #dee2e6;
        }

        .sidebar-header {
            display: flex; 
            justify-content: center; 
            align-items: center; 
            height: 100px; 
 
        }

   
        .sidebar {
            background-color: #343a40;
            border-right: 1px solid #dee2e6;
            padding-top: 2rem;
            position: fixed;
            height: 100vh;
            width: 250px;

        }

            .sidebar .nav-link {
                color: #ffffff;
                padding: 10px 15px;
                font-size: 1rem;
                transition: all 0.3s ease;
                border-radius: 5px;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background-color: #495057;
                    color: #ffffff;
                    font-weight: bold;
                }

        .content-wrapper {
            padding: 1rem;
            overflow-y: auto;
            grid-column: 2;
        }

        .wrapper > .sidebar {
            position: relative;
            z-index: 10;
        }
        /* Căn chỉnh dropdown-menu xuống dưới button */
        #userProfileDropdown {
            position: absolute;
            top: 100%;  /* Đảm bảo menu xuất hiện dưới button */
            left: 85%;
            right: 20px;
            z-index: 1050; /* Đảm bảo dropdown sẽ hiển thị phía trên các phần tử khác */
            display: none; /* Mặc định ẩn dropdown */
        }

        /* Khi dropdown có class 'show', dropdown sẽ hiển thị */
        #userProfileDropdown.show {
            display: block;
        }

        /* Thêm hiệu ứng shadow, border và rounded corner cho dropdown */
        .dropdown-menu {
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        }

        /* Style cho mỗi item trong menu */
        .dropdown-item {
            font-size: 1rem;
            padding: 10px 20px;
            color: #333;
            transition: background-color 0.3s ease;
        }

        /* Thay đổi màu nền khi hover item */
        .dropdown-item:hover {
            background-color: #f1f1f1;
            cursor: pointer;
        }

        /* Border dưới cùng của dropdown-item */
        .dropdown-item + .dropdown-item {
            border-top: 1px solid #eee;
        }


    </style>
</head>
<body>
    <div class="wrapper">
        <!-- Topbar -->
        <nav class="navbar navbar-expand-lg navbar-light border-bottom shadow-sm py-2 topbar" style="background:#181a1b">
            <div class="container-fluid">
                <button class="btn btn-link text-dark me-3">
                    <i class="fas fa-ellipsis-v"></i>
                </button>
                <div class="d-flex flex-grow-1 position-relative align-items-center">
                    <input type="text" class="form-control bg-light border-0 ps-4" placeholder="Search..." id="searchTerm" style="padding-left: 35px">
                    <i class="fas fa-search position-absolute top-50 start-0 translate-middle-y ms-2 text-muted" style="padding-left:10px"></i>
                </div>
                <div class="d-flex align-items-center ms-auto">
                    <div class="position-relative me-3">
                        <button class="btn btn-link text-dark">
                            <i class="fas fa-envelope fs-5"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="unreadEmailsCount">3</span>
                        </button>
                    </div>
                    <div class="position-relative me-3" ngbDropdown>
                        <button class="btn btn-link text-dark" id="notificationsDropdownToggle">
                            <i class="fas fa-bell fs-5"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="unreadNotificationsCount">5</span>
                        </button>
                        <div class="dropdown-menu dropdown-menu-end shadow" style="width: 300px; max-height: 400px; overflow-y: auto;">
                            <h6 class="dropdown-header">Notifications</h6>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item d-flex align-items-center py-2" href="#">
                                <div class="flex-grow-1">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">Admin</small>
                                        <small class="text-muted">10:00 AM</small>
                                    </div>
                                    <div class="fw-bold">New Notification</div>
                                </div>
                                <span class="ms-2 badge bg-primary rounded-pill">New</span>
                            </a>
                        </div>
                    </div>
                    <div class="d-inline-block">
                        <!-- Hiển thị thông tin người dùng nếu đã đăng nhập -->
                        @if (Context.Session.GetString("UserName") != null)
                        {
                            <!-- Dropdown button người dùng -->
                            <button class="btn d-flex align-items-center" id="userProfileDropdownToggle" aria-expanded="false">
                                <img src="@Url.Content("~/images/user-avatar.jpg")" alt="User avatar" class="rounded-circle me-2" style="width: 32px; height: 32px; object-fit: cover;">
                                <div class="d-none d-sm-block text-start">
                                    <div class="fw-bold">
                                        @Context.Session.GetString("DisplayName")
                                    </div>
                                    <small class="text-muted">@Context.Session.GetString("UserName")</small>
                                </div>
                            </button>

                            <!-- Dropdown menu -->
                            <ul class="dropdown-menu dropdown-menu-end shadow" id="userProfileDropdown">
                                <li><button class="dropdown-item" data-bs-toggle="modal" data-bs-target="#changePasswordModal" onclick="closeUserProfileDropdown()"><a href="@Url.Action("AdminChangePassword", "Accounts")">Change Password</a></button></li>
                                <li>
                                    <form method="post" action="@Url.Action("Logout", "Accounts")">
                                        <button class="dropdown-item" type="submit">Logout</button>
                                    </form>
                                </li>
                            </ul>


                        }
                        else
                        {
                            <p>User is not logged in</p> <!-- Nếu chưa đăng nhập -->
                        }


                    </div>




                </div>
            </div>
        </nav>

        <!-- Sidebar -->
        <div class="sidebar text-white shadow-lg" style="background:#181a1b">
            <div class="sidebar-header" style="text-align: center;">
                <h1 class="title fs-4 fw-bold">Foodiy Admin</h1>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" href="@Url.Action("Index", "Dashboard")">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Bills" asp-action="Index" >
                        <i class="fas fa-file-invoice"></i> Bill
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Orders" asp-action="Index">
                        <i class="fas fa-shopping-cart"></i> Order
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Foods" asp-action="Index">
                        <i class="fas fa-cogs"></i> Foods
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Customers" asp-action="Index">
                        <i class="fas fa-users"></i> Customers
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Employees" asp-action="Index">
                        <i class="fas fa-user-tie"></i> Employees
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Promotions" asp-action="Index">
                        <i class="fas fa-percent"></i> Promotion
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Supplies" asp-action="Index">
                        <i class="fas fa-warehouse"></i> Supplies
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Suppliers" asp-action="Index">
                        <i class="fas fa-truck"></i> Supplier
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Settings" asp-action="Index">
                        <i class="fas fa-cogs"></i> Settings
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="content-wrapper" style="background:#25282a">
            <div>
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Render Scripts Section -->
    @RenderSection("Scripts", false)

    <script>

        // Chắc chắn dropdown mở khi nhấn nút người dùng
        document.getElementById("userProfileDropdownToggle").addEventListener("click", function(event) {
            event.preventDefault();  // Ngừng sự kiện mặc định
            var dropdown = document.getElementById("userProfileDropdown");
            // Toggle class 'show' để mở/đóng dropdown
            dropdown.classList.toggle("show");
        });

        // Đóng dropdown khi chọn mục
        function closeUserProfileDropdown() {
            var dropdown = document.getElementById("userProfileDropdown");
            if (dropdown.classList.contains('show')) {
                dropdown.classList.remove('show');
            }
        }



        function logout() {
            console.log("User logged out");
        }
    </script>
</body>
</html>
