@model OnlineFood.Models.Food

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Update</title>
    <link rel="stylesheet" href="~/css/FoodsUpdate.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <div class="container">
        <form class="product-form">
            <h1>PRODUCT UPDATE</h1>

            <div class="form-layout">
                <div class="product-image">
                    @*<img src="/placeholder.svg?height=300&width=300" alt="Bun Dau">*@
                    <img src="@Html.DisplayFor(model => model.Hinhanh)" alt="@Html.DisplayFor(model => model.TenMonAn)" />
                </div>

                <div class="form-content">
                    <section class="tour-info">
                        <h2>TOUR INFO</h2>

                        <div class="form-group">
                            <span class="label">@Html.DisplayNameFor(model => model.Id)</span>
                            <span class="value highlight">@Html.EditorFor(model => model.Id)</span>
                        </div>

                        <div class="form-group">
                            <span class="label">@Html.DisplayNameFor(model => model.TenMonAn)</span>
                            <span class="value">@Html.EditorFor(model => model.TenMonAn)</span>
                        </div>

                        <div class="form-group">
                            <span class="label">@Html.DisplayNameFor(model => model.Size)</span>
                            <span class="value">@Html.EditorFor(model => model.Size)</span>
                        </div>

                        <div class="form-group">
                            <span class="label">@Html.DisplayNameFor(model => model.Soluong)</span>
                            <span class="value">@Html.EditorFor(model => model.Soluong)</span>
                        </div>

                        <div class="form-group">
                            <span class="label">@Html.DisplayNameFor(model => model.GiaTien)</span>
                            <span class="value"> @Html.EditorFor(model => model.GiaTien)</span>
                        </div>
                    </section>

                    <section class="ingredients">
                        <div class="ingredients-header">
                            <h2>Ingredients</h2>
                            <button type="button" class="btn-add">
                                <span class="plus-icon">+</span>
                                Add Ingredients
                            </button>
                            <div class="action-buttons">
                                <button type="button" class="icon-button">
                                    <span class="material-icons">edit</span>
                                </button>
                                <button type="button" class="icon-button">
                                    <span class="material-icons">delete</span>
                                </button>
                            </div>
                        </div>

                        <table class="ingredients-table">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.TenMonAn)</th>
                                    @foreach (var infoFood in Model.InfoFoods)
                                    {
                                        <td>@Html.DisplayNameFor(model => infoFood.Songuyenlieucan)</td>
                                    }
                                    <th>DonVi</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Html.EditorFor(model => model.TenMonAn)</td>
                                    @foreach (var infoFood in Model.InfoFoods)
                                    {
                                        <td>@infoFood.Songuyenlieucan</td>

                                        <td>@infoFood.IdNguyenLieuNavigation?.DonVi</td>
                                    }
                                </tr>
                            </tbody>
                        </table>
                    </section>

                    <div class="form-group">
                        <label for="status">Status</label>
                        <div class="select-wrapper">
                            <select id="status" name="status">
                                <option value="available" selected>Available</option>
                                <option value="unavailable">Unavailable</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn-primary">Update</button>
                        <button type="button" class="btn-secondary">Cancel</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
</html>

