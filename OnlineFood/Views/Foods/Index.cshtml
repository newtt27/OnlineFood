@model IEnumerable<OnlineFood.Models.Food>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Management</title>
    <link rel="stylesheet" href="~/css/Foods.css">
    <script src="https://unpkg.com/lucide@latest"></script>

</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>PRODUCT MANAGEMENT</h1>
                <div class="action-buttons">
                    <button class="btn btn-outline"><i data-lucide="import"></i>IMPORT</button>
                    <button class="btn btn-outline"><i data-lucide="file-output"></i>EXPORT</button>
                    <a href="/Foods/Create" class="btn btn-green"><i data-lucide="plus"></i>ADD</a>
                    

                       
                  
                    <a href="/Foods/Delete" class="btn btn-red"><i data-lucide="trash-2"></i>DELETE</a>
                </div>
            </div>

            <div class="filter-section">
                <div class="filter-left">
                    <span class="product-count">PRODUCTS <span class="count">(100)</span></span>
                    <select class="select">
                        <option value="all">All</option>
                        <option value="available">Available</option>
                        <option value="pending">Pending</option>
                        <option value="sold">Sold out</option>
                    </select>
                </div>
                <div class="filter-right">
                    <select class="select">
                        <option value="today">Today</option>
                        <option value="week">This Week</option>
                        <option value="month">This Month</option>
                    </select>
                    <select class="select">
                        <option value="columns">Columns</option>
                        <option value="compact">Compact</option>
                        <option value="expanded">Expanded</option>
                    </select>
                </div>
            </div>


            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th><input type="checkbox"></th>
                            <th>Product Info</th>
                            <th>Category ID</th>
                            <th>Size</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Detail</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>


                                <td><input type="checkbox"></td>
                                <td>

                                    <div class="product-info">
                                        <img src="@(string.IsNullOrEmpty(item.Hinhanh) ? "/assets/image" : item.Hinhanh)" />
                                        <div>
                                            <div class="product-id">@Html.DisplayFor(modelItem => item.Id)</div>
                                            <div class="product-name">@Html.DisplayFor(modelItem => item.TenMonAn)</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="category-id">@Html.DisplayFor(modelItem => item.IdDanhMuc)</div>
                                    <div class="category-name">@Html.DisplayFor(modelItem => item.IdDanhMucNavigation.TenDanhMuc)</div>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Size)</td>
                                <td>@Html.DisplayFor(modelItem => item.Soluong)</td>
                                <td>@Html.DisplayFor(modelItem => item.GiaTien)</td>
                                <td><span class="status status-available">Available</span></td>
                                <td><button onclick="location.href='@Url.Action("Details", new { id = item.Id })'" class="btn btn-ghost">View</button></td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                </td>
                            </tr>
                        }
