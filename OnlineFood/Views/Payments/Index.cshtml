@model IEnumerable<OnlineFood.Models.Payment>

@{
    ViewData["Title"] = "Thanh toán";
}
<head>
    <link rel="stylesheet" href="~/css/payment.css" asp-append-version="true">

</head>
<body>
    <div class="payment-page-background">
        <div class="payment-container">
            <div class="form-content">
                <h1>Payment Page</h1>
                <p>Check your information</p>

                <div class="contact-section">
                    <h2>Contact Information</h2>
                    <form id="contactForm" novalidate>
                        <input type="text" placeholder="Name" name="name" id="name" value="Tên mặc định"
                               required minlength="3" maxlength="50">
                        <span class="error-message" id="nameError"></span>

                        <input type="tel" placeholder="Phone" name="phone" id="phone" value="0123456789"
                               required pattern="^\d{10,11}$">
                        <span class="error-message" id="phoneError"></span>

                        <input type="email" placeholder="Email" name="email" id="email" value="example@email.com"
                               required>
                        <span class="error-message" id="emailError"></span>

                    </form>
                </div>

                <div class="payment-section">
                    <h3>Payment method</h3>
                    <button type="button" class="payment-btn selected" onclick="selectPaymentMethod('card')">Card</button>
                    <button type="button" class="payment-btn" onclick="selectPaymentMethod('momo')">Momo</button>
                    <button type="button" class="payment-btn" onclick="selectPaymentMethod('zalopay')">Zalo Pay</button>
                </div>

                <div class="delivery-section">
                    <h3>Delivery Method</h3>
                    <button type="button" class="delivery-btn selected" onclick="selectDeliveryMethod('ultra-fast')">Ultra-fast</button>
                    <button type="button" class="delivery-btn" onclick="selectDeliveryMethod('normal')">Normal</button>

                    <form id="deliveryForm" novalidate>
                        <input type="text" placeholder="Enter delivery address" value="abcdef" name="address"
                               id="address" required minlength="5" maxlength="50">
                        <span class="error-message" id="addressError"></span>
                    </form>
                </div>
            </div>

            <!-- Right Section: Summary -->
            <div class="summary">
                <h3>Total Products (<span id="productCount">0</span>)</h3>
                <!-- Product items will be added dynamically here -->
                <div class="promotions">
                    <h4>Promotions List</h4>
                    <p>Code: DMVCL</p>
                </div>
                <div class="totals">
                    <p id="subtotal"><span></span></p>
                    <p id="discount"><span></span></p>
                    <p id="delivery-price"><span></span></p>
                    <h4 id="total">Total: <span></span></h4>
                </div>
                <button type="button" class="checkout-btn">Thanh Toán</button>
            </div>

            </div>
        </div>
    </div>

    @section Scripts {
        <script src="~/js/payment.js" asp-append-version="true" defer></script>
    }

</body>