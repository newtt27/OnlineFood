@model OnlineFood.Models.Employee

@{
    ViewData["Title"] = "Employee Details";
}

<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">@ViewData["Title"]</h1>
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h4>Employee Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4 text-muted">
                    @Html.DisplayNameFor(model => model.TenNhanVien)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.TenNhanVien)
                </dd>
                <dt class="col-sm-4 text-muted">
                    Tên tài khoản
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.IdaccountNavigation.UserName)
                </dd>

                <dt class="col-sm-4 text-muted">
                    Mật khẩu
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.IdaccountNavigation.MatKhau)
                </dd>

                <dt class="col-sm-4 text-muted">
                    @Html.DisplayNameFor(model => model.DienThoai)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.DienThoai)
                </dd>

                <dt class="col-sm-4 text-muted">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt class="col-sm-4 text-muted">
                    @Html.DisplayNameFor(model => model.DiaChi)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.DiaChi)
                </dd>

                <dt class="col-sm-4 text-muted">
                    @Html.DisplayNameFor(model => model.Birth)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Birth)
                </dd>

                <dt class="col-sm-4 text-muted">
                    @Html.DisplayNameFor(model => model.NgayBatDau)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.NgayBatDau)
                </dd>

                <dt class="col-sm-4 text-muted">
                    Chi tiết ca làm việc
                </dt>
                <dd class="col-sm-8">
                    @if (Model.IdShiftNavigation != null)
                    {
                        <a asp-controller="Shifts" asp-action="Details" asp-route-id="@Model.IdShiftNavigation.Id" class="btn btn-outline-primary btn-sm">
                            Xem
                        </a>
                    }
                    else
                    {
                        <span class="text-danger">No Shift Assigned</span>
                    }
                </dd>

                <dt class="col-sm-4 text-muted">
                    Role
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.IdaccountNavigation.IdroleNavigation.TenRole)
                </dd>

                <dt class="col-sm-4 text-muted">
                    Status
                </dt>
                <dd class="col-sm-8">
                    @if (Model.TrangThai == 1)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
