@{
    ViewData["Title"] = "Admin Change Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f8f9fa; /* Màu nền nhạt */
            font-family: Arial, sans-serif;
        }

        .form-control {
            border-radius: 30px; /* Bo tròn tất cả các góc của input */
            padding: 10px 20px; /* Tăng kích thước vùng nhập */
        }

        .btn-primary {
            border-radius: 30px; /* Bo tròn nút submit */
            padding: 10px 20px; /* Tăng kích thước nút */
            font-weight: bold;
        }

        form {
            max-width: 400px;
            margin: 50px auto;
            background-color: #fff;
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Đổ bóng nhẹ */
        }

        h2 {
            text-align: center;
            font-weight: bold;
            color: #343a40;
        }

        .alert {
            margin-top: 20px;
            text-align: center;
        }
    </style>
</head>
<body>
    

    <form asp-action="AdminChangePassword" method="post">
        <h2>Change Password</h2>
        <div class="form-group mt-3">
            <label for="currentPassword">Current Password</label>
            <input type="password" class="form-control" id="currentPassword" name="currentPassword" required />
        </div>
        <div class="form-group mt-3">
            <label for="newPassword">New Password</label>
            <input type="password" class="form-control" id="newPassword" name="newPassword" required />
        </div>
        <div class="form-group mt-3">
            <label for="confirmPassword">Confirm New Password</label>
            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required />
        </div>
        <button type="submit" class="btn btn-primary btn-block mt-4">Change Password</button>
    </form>

    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    function goBack() {
        window.history.back(); // Quay lại trang trước mà không gửi dữ liệu form
    }
    </script>

</body>
</html>

